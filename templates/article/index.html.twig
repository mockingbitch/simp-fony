{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="wrapper">
   <table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Body</th>
  </tr>
  {% for article in articles %}
  <tr>
    <td>{{article.id}}</td>
    <td>{{article.title}}</td>
    <td>{{article.body}}</td>
    <td><a href="/article/{{article.id}}">Show</a></td>
    <td><a href="/article/delete/{{article.id}}" data-id="{{article.id}}">Delete</a></td>
    <td><a href="/article/edit/{{article.id}}" data-id="{{article.id}}">Edit</a></td>
  </tr>
  {% endfor %}
</table>
</div>
{% endblock %}
